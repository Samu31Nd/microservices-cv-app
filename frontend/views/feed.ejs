<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feed de Usuarios</title>
<link rel="icon" type="image" href="/assets/logo-black.png" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Darumadrop+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">

        <div class="header">
            <div class="headerLogo">
                <a href="/me">
                    <h1 style="color: #9fbd4e;" >Chimp</h1><h1>Job</h1>
                </a>
            </div>
        </div>

        <header class="my-5 text-center">
            <h1>Feed de Usuarios</h1>
            <a href="/me" class="btn btn-success mt-2" style="background-color: gray;">Perfil</a>
        </header>
        
        <section class="my-5">
            <h2>Usuarios que buscan trabajo</h2>
            <div class="row">
                <% users.forEach(user => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= user.name %></h5>
                                <p class="card-text"><strong>Teléfono:</strong> <%= user.phone %></p>
                                <p class="card-text"><strong>Email:</strong> <%= user.email %></p>
                                <p class="card-text"><strong>Descripción:</strong> <%= user.description %></p>
                                <a href="http://localhost:3001/pdf/<%= user.id %>.pdf" class="btn btn-primary">CV</a>
                                
                                <!-- Formulario para conectar usuarios -->
                                <form method="POST" action="/connect">
                                    <input type="hidden" name="employeeId" value="<%= user.employeeId %>">
                                    <button type="submit" class="btn btn-success mt-2">Conectar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>

        <section class="my-5">
            <h2>Usuarios Nuevos</h2>
            <div class="row">
                <% newUsers.forEach(newUser => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title"><%= newUser.name %></h5>
                                <p class="card-text"><strong>Teléfono:</strong> <%= newUser.phone %></p>
                                <p class="card-text"><strong>Email:</strong> <%= newUser.email %></p>
                                <p class="card-text"><strong>Descripción:</strong> <%= newUser.description %></p>
                                <a href="http://localhost:3001/pdf/<%= newUser.id %>.pdf" class="btn btn-primary">CV</a>
                                
                                <!-- Formulario para conectar usuarios -->
                                <form method="POST" action="/connect">
                                    <input type="hidden" name="employeeId" value="<%= newUser.employeeId %>">
                                    <button type="submit" class="btn btn-success mt-2">Conectar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </div>

    <footer class="text-center py-4">
        <p>&copy; 2024 Banana Inc. Todos los derechos reservados.</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
